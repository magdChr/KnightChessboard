<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magdaproject.knightchessboardapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_knight_svgrepo_com"
        android:label="@string/application_name"
        android:roundIcon="@drawable/icon_knight_svgrepo_com"
        android:supportsRtl="true">
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ChessboardActivity"></activity>

        <service android:name=".service.PathIntentService"
            android:exported="false"/>
    </application>


</manifest>